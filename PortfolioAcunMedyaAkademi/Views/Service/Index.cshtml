@model List<PortfolioAcunMedyaAkademi.Models.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.ServicesId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.IconUrl</td>
            <td><a href="/Service/UpdateService/@item.ServicesId" class="btn btn-warning"> Güncelle</a></td>
            <td><a href="/Service/DeleteService/@item.ServicesId" class="btn btn-danger"> Sil</a></td>
        </tr>
    }

</table>

<td><a href="/Service/CreateService/" class="btn btn-success">Servis Ekle</a></td>
