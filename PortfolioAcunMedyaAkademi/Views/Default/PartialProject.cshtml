@model List<PortfolioAcunMedyaAkademi.Models.TblProject>

<section class="ftco-section ftco-project" id="projects-section">
    <div class="container-fluid px-md-4">
        <div class="row justify-content-center pb-5">
            <div class="col-md-12 heading-section text-center ftco-animate">
                <span class="subheading">Projeler</span>
                <h2 class="mb-4">Tamamladığımız Projeler</h2>
                <p>Örnek Proje Görsellerimiz</p>
            </div>
        </div>
        <div class="row">
            @foreach(var item in Model)

            {
                <div class="col-md-3">
                 <div class="project img shadow ftco-animate d-flex justify-content-center align-items-center" style="background-image: url(@item.ProjectImageUrl);">
                   <div class="overlay"></div>
                  <div class="text text-center p-4">
                    <h3><a href="#"> @item.ProjectName</a></h3>
                   <span>@item.ProjectName</span>
             </div>
                  </div>


                    </div>
            }
            
        </div>
    </div>
</section>

