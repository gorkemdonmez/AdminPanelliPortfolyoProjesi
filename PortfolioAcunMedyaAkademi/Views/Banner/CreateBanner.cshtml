@model PortfolioAcunMedyaAkademi.Models.TblBanner
@{
    ViewBag.Title = "CreateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Banner Ekleme</h2>
<form method="post">

    <label>ID</label>
    @Html.TextBoxFor(x => x.BannerId, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Resim</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />


    <button class="btn btn-info">Banner Kaydet</button>


</form>
