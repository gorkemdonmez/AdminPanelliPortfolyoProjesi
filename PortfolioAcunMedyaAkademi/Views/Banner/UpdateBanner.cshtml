@model PortfolioAcunMedyaAkademi.Models.TblBanner

@{
    ViewBag.Title = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Banner Güncelleme</h2>
<form method="post">

    <label>ID</label>
    @Html.TextBoxFor(x => x.BannerId, new { @class = "form-control" })
    <br />
    <label>Başlık</label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
    <br />
    <label>Resim/label</label>
    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />

    <button class="btn btn-info">Bannerı Güncelle</button>

</form>
