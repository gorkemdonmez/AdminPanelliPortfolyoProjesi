@model List<PortfolioAcunMedyaAkademi.Models.TblAdress>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<table class=" table table-bordered">
    <tr>
        <th>ID</th>
        <th>Adres</th>
        <th>Telefon Numarası</th>
        <th>Emaili</th>
        <th>Websitesi</th>
        <th>Güncelle</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Adresid</td>
            <td>@item.Adres</td>
            <td>@item.Phone</td>
            <td>@item.Email</td>
            <td>@item.Website</td>
            <td><a href="/Adress/UpdateAdress/@item.Adresid" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Adress/DeleteAdress/@item.Adresid" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>
<td><a href="/Adress/CreateAdress" class="btn btn-success">Adres Ekle</a></td>
